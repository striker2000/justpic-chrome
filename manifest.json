{
	"manifest_version": 2,
	"name": "JustPic",
	"description": "JustPic позволяет напрямую открывать исходное изображение, минуя страницу с назойливой рекламой.",
	"version": "0.0.3",
	"background": {
		"scripts": [
			"background.js"
		],
		"persistent": true
	},
	"permissions": [
		"webRequest",
		"webRequestBlocking",
		"http://fastpic.ru/*",
		"http://*.fastpic.ru/*",
		"http://*.imagebam.com/*",
		"http://imageban.ru/*",
		"http://imageshost.ru/*",
		"http://imgdepo.ru/*",
		"http://radikal.ru/*"
	]
}
